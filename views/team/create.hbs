
<div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
               Create Salon Team Member

               {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
              {{/if}}
                          </header>
                          <div class="panel-body">
                              <form role="form" action="/team/create" method="post" enctype="multipart/form-data">
                                  <div class="form-group">
                                      <label for="exampleInputEmail1">Team Name </label>
                                      <input class="form-control" id="exampleInputEmail1" name="name" placeholder="Enter Salone Name"  type="text">
                                  </div>
                                  <div class="form-group">
                                      <label for="exampleInputPassword1">Designation</label>
                                      <input class="form-control" id="exampleInputPassword1" name="designation" placeholder="Password" type="text">
                                  </div>

                                <div class="form-group">
                                      <label for="exampleInputPassword1">Facebook ID</label>
                                      <input class="form-control" id="exampleInputPassword1" name="facebook_link" placeholder="Password"  type="text">
                                  </div>
                                   <div class="form-group">
                                      <label for="exampleInputPassword1">Twitter Link</label>
                                      <input class="form-control" id="exampleInputPassword1" name="twitter_link" placeholder="Password" type="text">
                                  </div>
                                   <div class="form-group">
                                      <label for="exampleInputPassword1">Linkind Link</label>
                                      <input class="form-control" id="exampleInputPassword1" name="linkind_link" placeholder="Password"  type="text">
                                  </div>
                                    <div class="form-group">
                                      <label for="exampleInputPassword1">Personal Photo</label>
                                      <input class="form-control" id="exampleInputPassword1" name="team_image_path" placeholder="Password"  type="file">
                                  </div>
                                  <br>
                                 

                                  <button type="submit" class="btn btn-info">Submit</button>
                              </form>

                          </div>
                      </section>
                  </div>