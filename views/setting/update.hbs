
<div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              Setting Update 
                          </header>
                          <div class="panel-body">
                                   {{#if success_msg}}
				                <div class="alert alert-success">{{success_msg}}</div>
				              {{/if}}
                              <form role="form" action="/setting/update" method="post" enctype="multipart/form-data">
                              <input type="hidden" value="{{setting._id}}" name="_id">
                                  <div class="form-group">
                                      <label for="exampleInputEmail1">Salon Name</label>
                                      <input class="form-control" id="exampleInputEmail1" name="salon_name" placeholder="Enter Salone Name" value="{{setting.salon_name}}" type="text">
                                  </div>
                                  <div class="form-group">
                                      <label for="exampleInputPassword1">Salone Email</label>
                                      <input class="form-control" id="exampleInputPassword1" name="salon_email" placeholder="Password" value="{{setting.salon_email}}" type="text">
                                  </div>

                                <div class="form-group">
                                      <label for="exampleInputPassword1">Salon Facebook</label>
                                      <input class="form-control" id="exampleInputPassword1" name="salon_facebook" placeholder="Password" value="{{setting.salon_facebook}}" type="text">
                                  </div>
                                   <div class="form-group">
                                      <label for="exampleInputPassword1">Salon Twitter</label>
                                      <input class="form-control" id="exampleInputPassword1" name="salon_twitter" placeholder="Password" value="{{setting.salon_twitter}}" type="text">
                                  </div>
                                   <div class="form-group">
                                      <label for="exampleInputPassword1">Salon Contact Info </label>
                                      <input class="form-control" id="exampleInputPassword1" name="salon_contactinfo" placeholder="Password" value="{{setting.salon_contactinfo}}" type="text">
                                  </div>
                                   <div class="form-group">
                                      <label for="exampleInputPassword1">Salon Phone</label>
                                      <input class="form-control" id="exampleInputPassword1" name="salon_phone" placeholder="Password" value="{{setting.salon_phone}}" type="text">
                                  </div>
                                   <div class="form-group">
                                      <label for="exampleInputPassword1">Salon Map Lat</label>
                                      <input class="form-control" id="exampleInputPassword1" name="salon_maplat" placeholder="Password" value="{{setting.salon_maplat}}" type="text">
                                  </div>

                                    <div class="form-group">
                                      <label for="exampleInputPassword1">Salon Map Lang</label>
                                      <input class="form-control" id="exampleInputPassword1" name="salon_maplong" placeholder="Password" value="{{setting.salon_maplong}}" type="text">
                                  </div>

                                    <div class="form-group">
                                      <label for="exampleInputPassword1">Salon Logo</label>
                                      <input class="form-control" id="exampleInputPassword1" name="salon_logo_path" placeholder="Password" value="{{setting.salon_logo_path}}" type="file">
                                       <img src="/uploads/{{setting.salon_logo_path}}" class="img-circle" alt="Cinque Terre" width="100" height="100">
                                  </div>
                                  <br>
                                 

                                  <button type="submit" class="btn btn-info">Submit</button>
                              </form>

                          </div>
                      </section>
                  </div>