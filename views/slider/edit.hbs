
<div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
              Update Salon slider Member

               {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
              {{/if}}
                          </header>
                          <div class="panel-body">
                              <form role="form" action="/slider/update" method="post" enctype="multipart/form-data">
                               <input type="hidden" value="{{slider._id}}" name="_id">
                                  <div class="form-group">
                                      <label for="exampleInputEmail1">Slider Title </label>
                                      <input class="form-control" id="exampleInputEmail1" name="slider_title" placeholder="Enter Salone Name" value="{{slider.slider_title}}"  type="text">
                                  </div>
                                  <div class="form-group">
                                      <label for="exampleInputPassword1">Designation</label>
                                      <input class="form-control" id="exampleInputPassword1" name="slider_desc"  value="{{slider.slider_desc}}" placeholder="Password" type="text">
                                  </div>

                                    <div class="form-group">
                                      <label for="exampleInputPassword1">Slider Image</label>
                                      <input class="form-control" id="exampleInputPassword1" name="slider_image_path" value="{{slider.slider_image_path}}" placeholder="Password"  type="file">
                                       <img src="/uploads/slider/{{slider.slider_image_path}}" class="img-circle" alt="Cinque Terre" width="100" height="100">
                                  </div>
                                  <br>
                                 

                                  <button type="submit" class="btn btn-info">Submit</button>
                              </form>

                          </div>
                      </section>
                  </div>