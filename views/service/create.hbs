
<div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
               Create Service

               {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
              {{/if}}
                          </header>
                          <div class="panel-body">
                              <form role="form" action="/service/create" method="post" enctype="multipart/form-data">
                                  <div class="form-group">
                                      <label for="exampleInputEmail1">Service Title </label>
                                      <input class="form-control" id="exampleInputEmail1" name="service_name" placeholder="Enter Salone Name"  type="text">
                                  </div>
                                  <div class="form-group">
                                      <label for="exampleInputPassword1">Service Descriptions</label>
                                      <input class="form-control" id="exampleInputPassword1" name="service_desc" placeholder="Password" type="text">
                                  </div>

                                <div class="form-group">
                                      <label for="exampleInputPassword1">Service Munites</label>
                                      <input class="form-control" id="exampleInputPassword1" name="service_min" placeholder="Password"  type="text">
                                  </div>
                                   <div class="form-group">
                                      <label for="exampleInputPassword1">Service Price</label>
                                      <input class="form-control" id="exampleInputPassword1" name="service_price" placeholder="Password" type="text">
                                  </div>

                                  <div class="form-group">
                                      <label for="exampleInputPassword1">Stylist Name</label>
                                      <input class="form-control" id="exampleInputPassword1" name="service_stylists" placeholder="Password" type="text">
                                  </div>
                                  
                                   <div class="form-group">
                                      <label for="exampleInputPassword1">Service Icon </label>
                                      <input class="form-control" id="exampleInputPassword1" name="service_icon" placeholder="Password"  type="text">
                                  </div>
                                    <div class="form-group">
                                      <label for="exampleInputPassword1">Personal Photo</label>
                                      <input class="form-control" id="exampleInputPassword1" name="service_image_path" placeholder="Password"  type="file">
                                  </div>
                                  <br>
                                 

                                  <button type="submit" class="btn btn-info">Submit</button>
                              </form>

                          </div>
                      </section>
                  </div>