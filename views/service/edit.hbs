
<div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
              Update Salon Service

               {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
              {{/if}}
                          </header>
                          <div class="panel-body">
                              <form role="form" action="/service/update" method="post" enctype="multipart/form-data">
                               <input type="hidden" value="{{service._id}}" name="_id">
                                  <div class="form-group">
                                      <label for="exampleInputEmail1">Service Name </label>
                                      <input class="form-control" id="exampleInputEmail1" name="service_name" placeholder="Enter Salone Name" value="{{service.service_name}}"  type="text">
                                  </div>
                                  <div class="form-group">
                                      <label for="exampleInputPassword1">Service Descriptions</label>
                                      <input class="form-control" id="exampleInputPassword1" name="service_desc"  value="{{service.service_desc}}" placeholder="Password" type="text">
                                  </div>

                                <div class="form-group">
                                      <label for="exampleInputPassword1">Service Munites</label>
                                      <input class="form-control" id="exampleInputPassword1" name="service_min" value="{{service.service_min}}"  designationplaceholder="Password"  type="text">
                                  </div>
                                   <div class="form-group">
                                      <label for="exampleInputPassword1">Service Price</label>
                                      <input class="form-control" id="exampleInputPassword1" name="service_price" value="{{service.service_price}}" placeholder="Password" type="text">
                                  </div>
                                   <div class="form-group">
                                      <label for="exampleInputPassword1">Stylist Name</label>
                                      <input class="form-control" id="exampleInputPassword1" name="service_stylists" value="{{service.service_stylists}}"  placeholder="Password"  type="text">
                                  </div>
                                  <div class="form-group">
                                      <label for="exampleInputPassword1">Service Icon</label>
                                      <input class="form-control" id="exampleInputPassword1" name="service_icon" value="{{service.service_icon}}"  placeholder="Password"  type="text">
                                  </div>

                                    <div class="form-group">
                                      <label for="exampleInputPassword1">Personal Photo</label>
                                      <input class="form-control" id="exampleInputPassword1" name="service_image_path" value="{{service.service_image_path}}" placeholder="Password"  type="file">
                                       <img src="/uploads/service/{{service.service_image_path}}" class="img-circle" alt="Cinque Terre" width="100" height="100">
                                  </div>
                                  <br>
                                 

                                  <button type="submit" class="btn btn-info">Submit</button>
                              </form>

                          </div>
                      </section>
                  </div>